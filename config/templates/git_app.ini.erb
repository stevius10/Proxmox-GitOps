; Gitea Application Configuration

APP_NAME = Gitea
RUN_USER = <%= @app_user %>
RUN_MODE = prod

[server]
DOMAIN       = <%= @host %>
HTTP_PORT    = <%= @http_port %>
ROOT_URL     = http://<%= @host %>:<%= @http_port %>/
SSH_PORT     = <%= @ssh_port %>
START_SSH_SERVER = true
BUILTIN_SSH_SERVER_USER = <%= @ssh_user %>
HTTP_ADDR = 0.0.0.0

LANDING_PAGE = <%= @org_main %>

[database]
DB_TYPE  = sqlite3
PATH     = <%= @app_dir %>/gitea.db

[security]
INSTALL_LOCK = true
MIN_PASSWORD_LENGTH=4

[actions]
ENABLED = true
DEFAULT_ACTIONS_URL=self
LOG_RETENTION_DAYS = 7

[repository]
ROOT = <%= @app_dir %>/gitea-repositories
REPOSITORY_AVATAR_FALLBACK = none
DISABLE_STARS = true
DISABLE_MIGRATIONS = true

[ui]
ENABLE_USER_HEATMAP = false
EXPLORE_PAGING_DEFAULT_SORT = alphabetically

[service]
ENABLE_REGISTRATION_CAPTCHA = false
DISABLE_GRAVATAR = true
ENABLE_FEDERATED_AVATAR = false
SHOW_USER_EMAIL = false
SHOW_MILESTONES_DASHBOARD_PAGE = false

[service.explore]
REQUIRE_SIGNIN_VIEW = true
DISABLE_USERS_PAGE = true
DISABLE_ORGANIZATIONS_PAGE = true
DISABLE_CODE_PAGE = true

[avatar]
DISABLE_AVATAR = true

[i18n]
LANGS = en-US
NAMES = English

[git]
HOME_PATH=<%= @home_dir %>
MAX_GIT_DIFF_LINES = 500
MAX_GIT_DIFF_FILES = 50
GC_ARGS = --aggressive

[log]
MODE = console
LEVEL = Error

[cron]
ENABLED = true

[other]
SHOW_FOOTER_VERSION = false
SHOW_FOOTER_TEMPLATE_LOAD_TIME = false
SHOW_FOOTER_POWERED_BY = false
ENABLE_SITEMAP = false
ENABLE_FEED = false
