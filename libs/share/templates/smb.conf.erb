[global]
security = user
passdb backend = tdbsam
map to guest = bad user
usershare allow guests = no

<% @shares.each do |entry| -%>
  <% name, path = entry.split(':', 2) -%>
  [<%= name %>]
  path = <%= path %>
  valid users = <%= @login %>
  force user = <%= @user %>
  force group = <%= @group %>
  read only = no
  create mask = 0775
  directory mask = 2775
<% end -%>