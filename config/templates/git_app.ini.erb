; Gitea Application Configuration

APP_NAME = Gitea
RUN_USER = <%= @app_user %>
RUN_MODE = prod

[server]
DOMAIN       = <%= @host %>
HTTP_PORT    = <%= @http_port %>
ROOT_URL     = http://<%= @host %>:<%= @http_port %>/
SSH_PORT     = <%= @ssh_port %>
START_SSH_SERVER = true
BUILTIN_SSH_SERVER_USER = <%= @ssh_user %>
HTTP_ADDR = 0.0.0.0

[database]
DB_TYPE  = sqlite3
PATH     = <%= @app_dir %>/gitea.db

[security]
INSTALL_LOCK = true
MIN_PASSWORD_LENGTH=4

[actions]
ENABLED = true
DEFAULT_ACTIONS_URL=self
LOG_RETENTION_DAYS = 7

[repository]
ROOT = <%= @app_dir %>/gitea-repositories
REPOSITORY_AVATAR_FALLBACK = none
DISABLE_STARS = true
DISABLE_MIGRATIONS = true

[ui]
ENABLE_USER_HEATMAP = false
ONLY_SHOW_RELEVANT_REPOS = true
EXPLORE_PAGING_DEFAULT_SORT = alphabetically

[service]
ENABLE_REGISTERATION_CAPTCHA = false
DISABLE_GRAVATAR = true
ENABLE_FEDERATED_AVATAR = false
SHOW_USER_EMAIL = false

[avatar]
DISABLE_AVATAR = true

[git]
HOME_PATH=<%= @home_dir %>
MAX_GIT_DIFF_LINES = 500
MAX_GIT_DIFF_FILES = 50
GC_ARGS = --aggressive

[log]
MODE = console
LEVEL = Error