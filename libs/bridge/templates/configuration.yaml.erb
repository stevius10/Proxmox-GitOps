homeassistant: true
permit_join: true
mqtt:
  base_topic: zigbee2mqtt
  server: '<%= @broker_host %>'
  user: '<%= @broker_user %>'
  password: '<%= @broker_password %>'
serial:
  port: <%= @serial %>
  adapter: <%= @adapter %>
frontend:
  port: <%= @port %>
  host: 0.0.0.0
data_path: <%= @data_dir %>
advanced:
  channel: 11
  network_key: GENERATE
  pan_id: GENERATE
  ext_pan_id: GENERATE

  log_directory: <%= @logs_dir %>/%TIMESTAMP%
  log_rotation: true
  log_level: info
