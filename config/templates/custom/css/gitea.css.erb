:root {
    --bg: #fff;
    --fg: #0f172a;
    --muted: #64748b;
    --line: #e5e7eb;
    --primary: #f5f5f5;
    --r: 3px;
}

html,
body {
    background: var(--bg);
    color: var(--fg);
    font-size: 14.5px;
    line-height: 1.5;
}

#navbar .navbar-left,
#navbar .navbar-right {
    display: flex;
    align-items: center;
    gap: .25rem;
}

#navbar .item:hover,
#navbar .item.active {
    color: var(--muted);
    background: transparent;
}

#navbar {
    display: flex;
    align-items: center;
}

.repository .repo-header,
.repo-header,
.header-wrapper {
    display: flex;
    flex-wrap: wrap;
    gap: .5rem;
    align-items: center;
}

.repo-title {
    font-size: 1.25rem;
    font-weight: 700;
}

.repository .meta,
.repo-meta {
    color: var(--muted);
}

.repository .labels .label {
    margin-right: .25rem;
    margin-bottom: .25rem;
}

.repo-list .item,
.repositories .item {
    border: 1px solid var(--line);
    border-radius: var(--r);
    padding: .9rem;
    margin-bottom: .7rem;
}
