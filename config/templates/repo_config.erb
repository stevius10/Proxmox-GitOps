[core]
    repositoryformatversion = 0
    filemode = true
    bare = false
    logallrefupdates = true

[remote "origin"]
    url = ssh://<%= node['git']['user']['ssh'] %>@<%= node['git']['host']['ssh'] %>/<%= node['git']['org']['main']  %>/<%= @repo %>.git
    fetch = +refs/heads/*:refs/remotes/origin/*

[branch "main"]
    remote = origin
    merge = refs/heads/main
