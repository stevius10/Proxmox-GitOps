homeassistant: true
permit_join: true
mqtt:
  base_topic: zigbee2mqtt
  server: '<%= @mqtt_server %>'
  user: '<%= @mqtt_user %>'
  password: '<%= @mqtt_password %>'
serial:

  port: <%= @serial %>
frontend:
  port: <%= @port %>
  host: 0.0.0.0
data_path: <%= @data_dir %>
advanced:
  log_directory: /var/log/zigbee/%TIMESTAMP%
  log_rotation: true
  log_level: info
